    "analyzer:check": "npx eslint --no-error-on-unmatched-pattern --ext .ts,.js .",
    "formatter:fix": "npx prettier --write \"**/*.{ts,js,json,yml,md}\"",
    "formatter:check": "npx prettier --check \"**/*.{ts,js,json,yml,md}\"",
    "test": "npx jest -c .jestconfig.json"
